#!/bin/sh

if [ $# -lt 1 ] || [ $# -gt 3 ]; then
  echo 1>&2 "USAGE: bumpversion <changelog> <distribution> <version>"
  exit 1
fi

changelog=$1
distribution=$2
version=$3
dch --distribution "$distribution" --force-distribution --urgency low --changelog "$changelog" --newversion ${version} --package wollmux "Version bump."

